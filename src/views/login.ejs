<%- include('partials/head') %>
    <link rel="stylesheet" href="/css/login.css">
    </head>

    <body>
        <%- include('partials/header') %>
            <main>
                <section class="form">
                    <div class="logo-container">
                        <img src="/images/logo.png" alt="Logo Volando Bajito">
                    </div>
                    <div class="container-form">
                        <h2 class="title">Ingresa a tu cuenta</h2>

                        <form action="/user/login" autocomplete="off" method="POST">
                            <div class="main-user-information">
                                <div class="user-input-box">
                                    <label for="email">Email</label>
                                    <input class="input-form" type="text" name="email" id="email"
                                        placeholder="Ingresa tu email" value=""/>
                                        <div class="register-error-message">
                                            <% if(typeof(errors) != 'undefined'){%>
                                                <span class="text-danger">
                                                    <%= errors[0].msg %>
                                                </span>
                                            <%}%>
                                        </div>
                                </div>
                                <div class="user-input-box">
                                    <label for="password">Contraseña</label>
                                    <input class="input-form" type="password" name="password" id="password"
                                        placeholder="Ingrese su contraseña" />
                                        <div class="register-error-message">
                                            <% if(typeof(errors) != 'undefined' ){%>
                                                <span class="text-danger">
                                                    <%= errors[0].msg %>
                                                </span>
                                            <%}%>
                                        </div>
                                </div>
                                <div class="password-remember">
                                    <input type="checkbox" name="remember_me" id="remember_me">
                                    <label for="remember_me">Recordar mi usuario</label>
                                </div>
                                <div class="form-submit-button">
                                    <input type="submit" value="Ingresar">
                                </div>
                                <div class="user-input-box">
                                    <label for="username">¿No estas registrado?</label>
                                    <a href="/user/register">Crea tu cuenta Aqui</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </main>
            <%- include('partials/footer') %>