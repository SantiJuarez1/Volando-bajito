<%- include('partials/head') %>
    </head>
    <body>
        <main>
            <%- include('partials/header') %>
                <div class="container products-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="products-title">Estás editando: </h2>
                        </div>
                    </div>
                    <div class="col-12">
                        <form action="/edit/<%= Product.id %>?_method=PUT" method="POST">
                            <div class="product-detail">
                                <div class="col">
                                    <label for="title" class="form-label">Nombre del producto: </label>
                                    <input type="text" name="title" placeholder="Ej: Neuquen" class="form-input" value="<%= Product.title %>">
                                    <% if (locals.errors && locals.errors.title) { %>
                                        <p><%= errors.title.msg %></p>
                                    <% } %>
                                </div>
                                <div class="col">
                                    <label for="description" class="form-label">Descipción:</label>
                                    <input type="text" name="description" placeholder="Ingrese una breve descripción" class="form-input" value="<%= Product.description %>">
                                    <% if (locals.errors && locals.errors.description) { %>
                                        <p><%= errors.description.msg %></p>
                                    <% } %>
                                </div>
                                <div class="col">
                                    <label for="price" class="form-label">Precio del producto: </label>
                                    <input type="text" name="price" placeholder="Ej: 24.000" class="form-input" value="<%= Product.price %>">
                                    <% if (locals.errors && locals.errors.price) { %>
                                        <p><%= errors.price.msg %></p>
                                    <% } %>
                                </div>
                                <div class="col-button">
                                    <button type="submit" class="actualizar">Actualizar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
        </main>
        <%- include('partials/footer') %>