<%-include('partials/head') %>
<link rel="stylesheet" href="/css/register.css">
</head>
    <body>
        <%- include('partials/header') %>
            <main>
                <section class="form">
                    <div class="logo-container">
                        <img src="/images/logo.png" alt="Logo Volando Bajito">
                    </div>
                    <div class="container-form">
                        <h1 class="title">Crea tu cuenta</h1>
                        <form action="/register" autocomplete="off" method="post">
                            <div class="main-user-information">
                                <div class="user-input-box">
                                    <label for="fullName">Nombre y apellido</label>
                                    <input class="input-form" type="text" name="fullname" id="fullname"
                                        placeholder="Ingrese nombre completo" />
                                    <% if (locals.errors?.fullname) { %>
                                        <div class="register-error-message">
                                            <%= errors.fullname.msg %>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="user-input-box">
                                    <label for="username">Usuario</label>
                                    <input class="input-form" type="text" name="username" id="username"
                                        placeholder="Ingrese nombre de usuario deseado" />
                                    <% if (locals.errors?.username) { %>
                                        <div class="register-error-message">
                                            <%= errors.username.msg %>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="user-input-box">
                                    <label for="email">E-Mail</label>
                                    <input class="input-form" type="text" name="email" id="email" placeholder="Ingrese su E-Mail" />
                                    <% if (locals.errors?.email) { %>
                                        <div class="register-error-message">
                                            <%= errors.email.msg %>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="user-input-box">
                                    <label for="birthday">Fecha de nacimiento</label>
                                    <input class="input-form" type="date" name="birthday" id="birthday"
                                        placeholder="Ingrese fecha de nacimiento" />
                                    <% if (locals.errors?.birthday) { %>
                                        <div class="register-error-message">
                                            <%= errors.birthday.msg %>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="user-input-box">
                                    <label for="password">Contraseña</label>
                                    <input class="input-form" type="password" name="password" id="password"
                                        placeholder="Ingrese su contraseña" />
                                    <% if (locals.errors?.password) { %>
                                        <div class="register-error-message">
                                            <%= errors.password.msg %>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="user-input-box">
                                    <label for="confirmPassword">Confirmar contraseña</label>
                                    <input class="input-form" type="password" name="confirmPassword" id="confirmPassword"
                                        placeholder="Confirme su contraseña" />
                                    <% if (locals.errors?.confirmPassword) { %>
                                        <div class="register-error-message">
                                            <%= errors.confirmPassword.msg %>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="email-notifications-box">
                                    <input type="checkbox" name="notifications" id="notifications">
                                    <label for="notifications">Deseo recibir novedades y ofertas por E-Mail</label>
                                </div>
                                <div class="form-submit-button">
                                    <input type="submit" name="submit" value="Registrar" id="submit">
                                </div>
                                <div class="user-input-box">
                                    <label for="username">¿Ya estas registrado?</label>
                                    <a href="/login">Ingresa a tu cuenta</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </main>
            <%- include('partials/footer') %>